{% extends 'baseback.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
	<h1>Categorie index</h1>

	<div style="padding-bottom: 5%;"></div>

	<a href="{{ path('product_stat') }}" class="btn btn-primary" style="color: #fff; margin-top: 20px;">stats</a>

	<table class="table mt-4">
		<thead class="bg-light">


			<tr>

				<th>Name</th>
				<th>Description</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>Image</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>

					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.quantity }}</td>
					<td>{{ product.price }}</td>
					<td><img src=" {{asset(product.image) }}" class="rounded img-fluid" width="100px" height="100px"></td>
					<td>

						<a href="{{ path('app_product_edit', {'id': product.id}) }}">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewbox="0 0 16 16">
								<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
							</svg>
						</a>

						{{ include('product/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div id="pagination" class="pagination"></div>
	<script src="{{asset('https://code.jquery.com/jquery-3.6.0.min.js')}}"></script>


{% endblock %}
